<div class="row m-2 pt-4">
    <div class="col">
        {% if patients is empty %}
            <div class="row">
                <h4 class="mt-4 pt-5 text-center text-muted fw-bold">AÃºn no tiene pacientes</h4>
                <i class="fa-solid fa-user-clock fa-3x text-muted mt-3"></i>
            </div>
        {% endif %}

        {% for patient in patients %}
            <div class="row align-items-center mt-3 mb-4">
                <div class="col-1">
                    <img class="img-fluid rounded-circle" src="{{ patient.photo }}" alt="Patient photo" title="Foto del paciente" width="50">  
                </div>
                <div class="col-11">
                    <a href="{{ path('patient_details', {id: patient.id}) }}">{{ patient.name }} {{ patient.surnames }}</a>
                </div>
            </div>
        {% endfor %}
    </div>
</div>