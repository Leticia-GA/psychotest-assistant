{% extends 'layout.html.twig' %}

{% block content %}

    <main class="container">
        <h1 class="mt-4 mb-4">Psicólogos</h1>
        <hr>
        <table class="table">
            <thead class="table-light">
                <tr>
                    <th scope="col">Nombre</th>
                    <th scope="col">Apellidos</th>
                    <th scope="col">Teléfono</th>
                    <th scope="col">Especialización</th>
                    <th scope="col">Acciones</th>
                </tr>
            </thead>

            <tbody>
                {% for psychologist in psychologists %}
                    <tr>
                        <td>{{ psychologist.name }}</td>
                        <td>{{ psychologist.surnames }}</td>
                        <td>{{ psychologist.phoneNumber }}</td>
                        <td>{{ psychologist.specialization }}</td>
                        <td>
                            <a href="{{ path('psychologist_details', {id: psychologist.id}) }}">Detalles</a>
                            <a href="{{ path('psychologist_update', {id: psychologist.id}) }}">Editar</a>
                            <a href="{{ path('psychologist_remove', {id: psychologist.id}) }}">Eliminar</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('psychologist_create') }}">Añadir nuevo psicólogo</a>
    </main>
{% endblock %}