{% extends 'layout.html.twig' %}

{% block content %}

    <main class="container">
        <h1 class="mt-4 mb-4">Psicólogos</h1>
        <hr>
        <table class="table">
            <thead class="table-light">
                <tr>
                    <th scope="col">Nombre</th>
                    <th scope="col">Apellidos</th>
                    <th scope="col">Teléfono</th>
                    <th scope="col">Estudios</th>
                    <th scope="col">Especialización</th>
                    <th scope="col">Número de Colegiación</th>
                </tr>
            </thead>

            <tbody>
                {% for psychologist in psychologists %}
                    <tr>
                        <td>{{ psychologist.name }}</td>
                        <td>{{ psychologist.surnames }}</td>
                        <td>{{ psychologist.phoneNumber }}</td>
                        <td>{{ psychologist.education }}</td>
                        <td>{{ psychologist.specialization }}</td>
                        <td>{{ psychologist.collegiateNumber }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('new_psychologist') }}">Añadir nuevo psicólogo</a>
    </main>
{% endblock %}