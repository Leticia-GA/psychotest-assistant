{% extends 'layout/header.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('delete_confirmation') }}
{% endblock %}

{% block content %}
    <main class="container">
        <div class="row">
            <div class="h1 col-10 mt-4 mb-4">Psicólogos</div>

            <div class="col-2 mt-5 mb-4">
                <a class="btn btn-light primary" href="{{ path('psychologist_create') }}"><i class="fas fa-user-plus"></i> Añadir nuevo psicólogo</a>
            </div>
        </div>

        <hr>

        <table class="table">
            <thead class="table-light">
                <tr>
                    <th scope="col">Nombre</th>
                    <th scope="col">Apellidos</th>
                    <th scope="col">Teléfono</th>
                    <th scope="col">Especialización</th>
                    <th scope="col">Acciones</th>
                </tr>
            </thead>

            <tbody>
                {% for psychologist in psychologists %}
                    <tr>
                        <td>{{ psychologist.name }}</td>
                        <td>{{ psychologist.surnames }}</td>
                        <td>{{ psychologist.phoneNumber }}</td>
                        <td>{{ psychologist.specialization }}</td>
                        <td>
                            <a class="btn btn-light success" href="{{ path('psychologist_details', {id: psychologist.id}) }}">
                                <i class="fa-solid fa-circle-info"></i> Detalles
                            </a>
                            <a class="btn btn-light warning" href="{{ path('psychologist_update', {id: psychologist.id}) }}">
                                <i class="fa-solid fa-pen-to-square"></i>
                            </a>
                            <button type="button" class="btn btn-light danger" data-bs-toggle="modal" data-bs-target="#delete_confirmation_modal">
                                <i class="fa-solid fa-trash"></i>
                            </button>
                        </td>
                    </tr>

                    <div class="modal fade" id="delete_confirmation_modal" tabindex="-1" aria-labelledby="delete_confirmation_modal_label" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="delete_confirmation_modal_label">Eliminar Psicólogo</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    ¿Eliminar definitivamente el Psicólogo/a {{ psychologist.name~' '~psychologist.surnames }}?
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-light primary" data-bs-dismiss="modal">Cancelar</button>
                                    <button type="button" class="btn btn-light danger" data-href="{{ path('psychologist_remove', {id: psychologist.id}) }}">Eliminar</button>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </tbody>
        </table>
    </main>
{% endblock %}