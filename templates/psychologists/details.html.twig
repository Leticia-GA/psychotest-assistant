{% extends 'base.html.twig' %}

{% block content %}
    <main class="container">
        <div class="row">
            <div class="display-6 col-10 mt-5 mb-5">{{ psychologist.name~' '~psychologist.surnames}}</div>

            <div class="col-2 mt-5 mb-4">
                <a class="btn btn-light warning" href="{{ path('psychologist_update', {id: psychologist.id}) }}"><i class="fa-solid fa-pen-to-square"></i></a>
                <a class="btn btn-light danger" data-bs-toggle="modal" data-bs-target="#delete_confirmation_modal"><i class="fa-solid fa-trash"></i></a>
            </div>
        </div>

        <ul class="nav nav-tabs details" id="psychoDetailsTab" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active details-btn" id="home-tab" data-bs-toggle="tab" data-bs-target="#personal-info-tab-pane" type="button" role="tab" aria-controls="personal-info-tab-pane" aria-selected="true">
                    Información Personal
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link details-btn" id="profile-tab" data-bs-toggle="tab" data-bs-target="#academic-info-tab-pane" type="button" role="tab" aria-controls="academic-info-tab-pane" aria-selected="false">
                    Información Clínica
                </button>
            </li>
        </ul>

        <div class="tab-content" id="psychoDetailsTabContent">
            <div class="tab-pane fade show active" id="personal-info-tab-pane" role="tabpanel" aria-labelledby="home-tab" tabindex="0">
                {% include 'psychologists/details/personalInfo.html.twig' %}
            </div>

            <div class="tab-pane fade" id="academic-info-tab-pane" role="tabpanel" aria-labelledby="profile-tab" tabindex="0">
                {% include 'psychologists/details/academicInfo.html.twig' %}
            </div>
        </div>

        <div class="modal fade" id="delete_confirmation_modal" tabindex="-1" aria-labelledby="delete_confirmation_modal_label" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="delete_confirmation_modal_label">Eliminar Psicólogo</h5>
                         <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        ¿Eliminar definitivamente el Psicólogo/a {{ psychologist.name~' '~psychologist.surnames }}?
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-light primary" data-bs-dismiss="modal">Cancelar</button>
                        <a class="btn btn-light danger" href="{{ path('psychologist_remove', {id: psychologist.id}) }}">Eliminar</a>
                    </div>
                </div>
             </div>
        </div>
    </main>
{% endblock %}