{% extends 'layout/header.html.twig' %}

{% block content %}
    <main class="container">
        <div class="row">
            <div class="display-6 col-10 mt-5 mb-5">{{ psychologist.name~' '~psychologist.surnames}}</div>

            <div class="col-2 mt-5 mb-4">
                <a class="btn btn-light warning" href="{{ path('psychologist_update', {id: psychologist.id}) }}"><i class="fa-solid fa-pen-to-square"></i></a>
                <a class="btn btn-light danger" href="{{ path('psychologist_remove', {id: psychologist.id}) }}"><i class="fa-solid fa-trash"></i></a>
            </div>
        </div>

        <hr>
             
        <div class="row m-2 pt-4">
            <div class="col-5">
                <span class="text-primary fw-bold">Teléfono</span>
                <p>{{ psychologist.phoneNumber }}</p>
            </div>
            <div class="col-5">
                <span class="text-primary fw-bold">Email</span>
                <p>{{ psychologist.email }}</p>
            </div>
        </div>

        <div class="row m-2 pt-4">
            <div class="col">
                <span class="text-primary fw-bold">Estudios</span>
                <p>{{ psychologist.education }}</p>

                <span class="text-primary fw-bold">Número de Colegiación</span>
                <p>{{ psychologist.collegiateNumber }}</p>

                <span class="text-primary fw-bold">Especialización</span>
                <p>{{ psychologist.specialization }}</p>
            </div>
        </div>

        <div class="row mt-4 justify-content-end">
            <a class="btn btn-light primary col-1" href="{{ path('psychologists_list') }}"><i class="fas fa-angle-left"></i> Volver</a>
        </div>
    </main>
{% endblock %}