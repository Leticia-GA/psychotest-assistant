{% extends 'base.html.twig' %}

{% block content %}
    <main class="container">
        <div class="row">
            <div class="display-6 col-10 mt-5 mb-5">{{ app.user.name~' '~app.user.surnames}}</div>
        </div>
        
        <div class="row m-2 pt-4">
            <h4>Información Personal</h4>
            <hr>
            <div class="col-5">
                <span class="text-primary fw-bold">DNI</span>
                <p>** actualizar BBDD</p>
            </div>
            <div class="col-5">
                <span class="text-primary fw-bold">Fecha de nacimiento</span>
                <p>** actualizar BBDD</p>
            </div>
        </div>

        <div class="row m-2">
            <div class="col-5">
                <span class="text-primary fw-bold">Teléfono</span>
                <p>{{ app.user.phoneNumber }}</p>
            </div>
            <div class="col-5">
                <span class="text-primary fw-bold">Email</span>
                <p>{{ app.user.email }}</p>
            </div>
        </div>

        <div class="row m-2 pt-4">
            <h4>Información Académica</h4>
            <hr>
            <div class="col">
                <span class="text-primary fw-bold">Estudios</span>
                <p>{{ app.user.education }}</p>

                <span class="text-primary fw-bold">Número de Colegiación</span>
                <p>{{ app.user.collegiateNumber }}</p>

                <span class="text-primary fw-bold">Especialización</span>
                <p>{{ app.user.specialization }}</p>
            </div>
        </div>

    </main>
{% endblock %}