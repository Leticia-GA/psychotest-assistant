{% extends 'layout/header.html.twig' %}

{% block content %}
    <main class="container">
        <div class="row">
            <div class="display-6 col-10 mt-5 mb-5">{{ patient.name~' '~patient.surnames}}</div>
            
            {% if is_granted('ROLE_PSYC') %}
                <div class="col-2 mt-5 mb-4">
                    <a class="btn btn-light warning" href="{{ path('patient_update', {id: patient.id}) }}"><i class="fa-solid fa-pen-to-square"></i></a>
                    <a class="btn btn-light danger" data-bs-toggle="modal" data-bs-target="#delete_confirmation_modal"><i class="fa-solid fa-trash"></i></a>
                </div>
            {% endif %}
        </div>

        {% if is_granted('ROLE_ADMIN') %}
            <div>Psicólogo: 
                <a href="{{ path('psychologist_details', {id: psychologist.id}) }}">{{ psychologist.name~' '~psychologist.surnames }}</a>
            </div>
        {% endif %}
        
        <hr>
        
        <div class="row m-2 pt-4">
            <div class="col-5">
                <span class="text-primary fw-bold">Teléfono</span>
                <p>{{ patient.phoneNumber }}</p>
            </div>
            <div class="col-5">
                <span class="text-primary fw-bold">Email</span>
                <p>{{ patient.email }}</p>
            </div>
        </div>

        <div class="row m-2 pt-4">
            <div class="col">
                <span class="text-primary fw-bold">Diagnóstico</span>
                <p>{{ patient.diagnostic }}</p>

                <span class="text-primary fw-bold">Historial Clínico</span>
                <p>{{ patient.caseHistory }}</p>
            </div>
        </div>

        <div class="row mt-4 justify-content-end">
            <a class="btn btn-light primary col-1" href="{{ path('patients_list') }}"><i class="fas fa-angle-left"></i> Volver</a>
        </div>

        <div class="modal fade" id="delete_confirmation_modal" tabindex="-1" aria-labelledby="delete_confirmation_modal_label" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="delete_confirmation_modal_label">Eliminar Paciente</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        ¿Eliminar definitivamente el Paciente {{ patient.name~' '~patient.surnames }}?
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-light primary" data-bs-dismiss="modal"><i class="fa-solid fa-ban"></i> Cancelar</button>
                        <a class="btn btn-light danger" href="{{ path('patient_remove', {id: patient.id}) }}">
                            <i class="fa-solid fa-trash"></i> Eliminar
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </main>
{% endblock %}