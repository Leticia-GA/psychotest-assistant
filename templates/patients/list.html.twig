{% extends 'layout.html.twig' %}

{% block content %}

    <main class="container">
        <h1 class="mt-4 mb-4">Pacientes</h1>
        <hr>
        <table class="table">
            <thead class="table-light">
                <tr>
                    <th>Nombre</th>
                    <th>Apellidos</th>
                    <th>Teléfono</th>
                    <th>Acciones</th>
                </tr>
            </thead>

            <tbody>
                {% for patient in patients %}
                    <tr>
                        <td>{{ patient.name }}</td>
                        <td>{{ patient.surnames }}</td>
                        <td>{{ patient.phoneNumber }}</td>
                        <td>
                            <a href="{{ path('patient_details', {id: patient.id}) }}">Detalles</a>
                            <a href="{{ path('patient_update', {id: patient.id}) }}">Editar</a>
                            <a href="{{ path('patient_remove', {id: patient.id}) }}">Eliminar</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        {% if is_granted('ROLE_PSYC') %}
            <a href="{{ path('patient_create') }}">Añadir nuevo paciente</a>
        {% endif %}
    </main>
{% endblock %}