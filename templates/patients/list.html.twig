{% extends 'base.html.twig' %}

{% block body %}
    <h1>Pacientes</h1>
    <table>
        <tr>
            <th>Nombre</th>
            <th>Apellidos</th>
            <th>Teléfono</th>
        </tr>

        {% for patient in patients %}
            <tr>
                <td>{{ patient.name }}</td>
                <td>{{ patient.surnames }}</td>
                <td>{{ patient.phoneNumber }}</td>
            </tr>
        {% endfor %}
    </table>

    <a href="{{ path('new_patient') }}">Añadir nuevo paciente</a>
{% endblock %}