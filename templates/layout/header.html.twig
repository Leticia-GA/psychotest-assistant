<header>
   <nav class="navbar navbar-expand navbar-light bg-light static-top mb-4 shadow">
      <div class="container-fluid">

         <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <a class="navbar-brand" href="{{ path('dashboard') }}">
               <img src="{{ asset('build/images/logoLight.png') }}" width="200" alt="PSY-A logo">
            </a>

            <!-- Left links -->
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
               {% if is_granted('ROLE_ADMIN') %}
                  <li class="nav-item p-3">
                     <a {% if (app.request.get('_route')  == 'psychologists_list' or app.request.get('_route') == 'psychologist_details') %} 
                           class="nav-link active" aria-current="page" 
                        {% else %} 
                           class="nav-link" href="{{ path('psychologists_list') }}" 
                        {% endif %}>Psicólogos
                     </a>
                  </li>
               {% endif %}

               {% if has_role(['ROLE_ADMIN', 'ROLE_PSYC']) %}
                  <li class="nav-item p-3">
                     <a {% if (app.request.get('_route')  == 'patients_list' or app.request.get('_route') == 'patient_details' or app.request.get('_route') == 'associated_test_create') %} 
                           class="nav-link active" aria-current="page" 
                        {% else %} 
                           class="nav-link" href="{{ path('patients_list') }}" 
                        {% endif %}>Pacientes
                     </a>               
                  </li>
               {% endif %}


               {% if has_role(['ROLE_ADMIN', 'ROLE_PSYC']) %}
                  <li class="nav-item p-3">
                     <a {% if (app.request.get('_route')  == 'test_list' or app.request.get('_route') == 'test_details') %} 
                           class="nav-link active" aria-current="page" 
                        {% else %} 
                           class="nav-link" href="{{ path('test_list') }}" 
                        {% endif %}>Test</a>
                  </li>
               {% endif %}

               {% if is_patient() %}
                  <li class="nav-item p-3">
                     <a {% if (app.request.get('_route') == 'psychologist_details') %} 
                           class="nav-link active" aria-current="page" 
                        {% else %} 
                           class="nav-link" href="{{ path('psychologist_details', {id: app.user.psychologist.id}) }}" 
                        {% endif %}>Su Psicólogo</a>
                  </li>
               {% endif %}

               <li class="nav-item p-3">
                  <a {% if (app.request.get('_route')  == 'clinic' or app.request.get('_route') == 'clinic') %} 
                        class="nav-link active" aria-current="page" 
                     {% else %} 
                        class="nav-link" href="{{ path('clinic') }}" 
                     {% endif %}>Contacto</a>
               </li>
            </ul>
         </div>

         <div class="d-flex align-items-center mr-5">
            <div class="position-relative" id="notifications">
               <a class="text-reset me-3" href="{{ path('dashboard') }}">
                  <i class="fas fa-bell fs-5 dark"></i>
               </a>
            </div>

            <div class="dropdown ml-5">
                  <button class="btn btn-profile dropdown-toggle ml-5" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                     {{ app.user.name }}
                     <img class="img-profile rounded-circle" src="{{ app.user.photo }}" width="40">
                  </button>
                  
                  <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                     <li><a class="dropdown-item" href="{{ path('profile') }}">Ver Perfil</a></li>
                     <hr>
                     <li><a class="dropdown-item" href="{{ path('app_logout') }}">Cerrar Sesión</a></li>
                  </ul>
            </div>
         </div>
         
      </div>
   </nav>   
</header>