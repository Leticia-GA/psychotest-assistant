{% extends 'base.html.twig' %}

{% block content %}
    <main class="container">
        <h1 class="mt-4 mb-4">Test</h1>
        <hr>
        <table class="table">
            <thead class="table-light">
                <tr>
                    <th>Nombre</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>

            <tbody>
                {% for singleTest in test %}
                    <tr>
                        <td class="pt-3">{{ singleTest.name }}</td>
                        <td class="text-center">
                            <a class="btn btn-light success m-1" href="{{ path('test_details', {id: singleTest.id}) }}">
                                <i class="fa-solid fa-circle-info"></i>
                            </a>
                            {% if is_granted('ROLE_PSYC') %}
                                <a class="btn btn-light test m-1" href="{{ path('associated_test_associate', {id: singleTest.id}) }}">
                                    <i class="fas fa-user"></i> Asignar
                                </a>
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </main>
{% endblock %}