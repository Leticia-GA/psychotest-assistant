{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row vh-100 justify-content-center align-items-center">
            <div class="col-auto bg-light p-5">
                <form action="{{ path('login') }}" method="post">
                    <img src="{{ asset('build/images/logoDark.png') }}" class="img-fluid rounded d-block mx-auto pb-5" width="400" alt="PSY-A logo">
                    
                    <div class="mb-3">
                        {% if error %}
                                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}
                        <label for="username" class="form-label">Email:</label>
                        <input type="email" class="form-control" id="username" aria-describedby="emailHelp" name="_username" value="{{ last_username }}">
                        <div id="emailHelp" class="form-text">ejemplo@gmail.com</div>
                    </div>

                    <div class="mb-3">
                        <label for="password" class="form-label">Contrase√±a:</label>
                        <input type="password" class="form-control" id="password" name="_password">
                    </div>

                    <input type="hidden" name="_target_path" value="/"/> 

                    <button type="submit" class="btn btn-primary w-100">Entrar</button>
                </form>
            </div>
        </div>
    </div>

    
{% endblock %}
